<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 앱 로고 -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- 환영 메시지 -->
    <TextView
        android:id="@+id/introTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환영합니다!\n무엇을 하시겠어요?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <!-- 캠퍼스 투어 버튼 -->
    <Button
        android:id="@+id/btnTour"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="캠퍼스 투어"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/introTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- AI & 힐링 투어 버튼 -->
    <Button
        android:id="@+id/btnAiCare"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/tour_button_text"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnTour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 교재 장터 버튼 -->
    <Button
        android:id="@+id/btnMarket"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="교재 장터"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnAiCare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
